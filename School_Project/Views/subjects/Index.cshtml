@model IEnumerable<School_Project.Models.subject>

@{
    ViewBag.Title = "Index";
}

<h2>Subject Details</h2>

<p>
    @Html.ActionLink("Add Subject", "Create", null, new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class.ClassName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }, new {@class="btn btn-primary"}) 
            @Html.ActionLink("Details", "Details", new { id = item.SubjectId }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
