@model IEnumerable<School_Project.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>Class Details</h2>

<p>
    @Html.ActionLink("Add Class", "Create",null,new {@class = "btn btn-primary"})
</p>
<table class="table table-hover table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Classid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Classid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Classid }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id = item.Classid }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Classid }, new { @class = "btn btn-danger" } )
        </td>
    </tr>
}

</table>
